pipeline {
    agent any
    
    tools  {
        nodejs "nodejs"
    }
    environment {
        APP_NAME = 'wk-1gallery'
    }
stages{
    stage ('Clone repository') {
            steps {
                echo 'Cloning repository'
                git 'https://github.com/Suzan97/gallery-sue.git'
            }
    }
    stage('Build'){
        steps {
            sh 'npm install'
        }
    }

    stage ('Test') {
            steps {
                echo 'npm test'
            }
    }
    stage ('Deploy to Heroku'){
        steps{
            withCredentials([usernameColonPassword(credentialsId: 'heroku', variable: 'HEROKU_CREDENTIALS' )]){
               sh 'git push https://${HEROKU_CREDENTIALS}@git.heroku.com/wk-1gallery.git main -f master'
               
            }
        }
    }
    
}
 post('Status updates') {
        success {
            slackSend color: "good", message: "Build #${BUILD_NUMBER} ran successfully"
        }
        
        failure { 
            slackSend color: "danger", message: "Build #${BUILD_NUMBER} failed"
        }
    }
}